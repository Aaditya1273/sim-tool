{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "app/api/agent/route.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "GOOGLE_API_KEY": "@google_api_key",
    "LLM_MODEL": "@llm_model",
    "FRAXTAL_RPC_URL": "@fraxtal_rpc_url",
    "FRAXTAL_CHAIN_ID": "@fraxtal_chain_id",
    "FRAXTAL_EXPLORER": "@fraxtal_explorer",
    "NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID": "@next_public_walletconnect_project_id",
    "NEXT_PUBLIC_YFORGE_TOKEN_ADDRESS": "@next_public_yforge_token_address",
    "NEXT_PUBLIC_YFORGE_VAULT_ADDRESS": "@next_public_yforge_vault_address"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}